@model DAL.Models.ViewModel.MedicalDataViewModel
@using DAL.Extensions
@using DAL.Utility
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<br /><br />
<h2 class="text-info">Medical Details</h2>
<div class="p-4 border rounded row">
    <div class="col-8">

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="MedicalData.CreatedOn"></label>
            </div>
            <div class="col-6">
                <input asp-for="MedicalData.CreatedOn" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="MedicalData.UpdatedOn"></label>
            </div>
            <div class="col-6">
                <input asp-for="MedicalData.UpdatedOn" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="MedicalData.CreatedBy"></label>
            </div>
            <div class="col-6">
                <input asp-for="MedicalData.CreatedBy" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="MedicalData.UpdatedBy"></label>
            </div>
            <div class="col-6">
                <input asp-for="MedicalData.UpdatedBy" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
            </div>
            <div class="col-5">
                Attachment
                <img src="@Model.MedicalData.Attachment" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
            </div>
            <div class="col-4">
                @if (User.IsInRole(SD.MedicalEndUser))
                {
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.MedicalData.Id">Edit</a>
                }
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
        </div>
    </div>
</div>