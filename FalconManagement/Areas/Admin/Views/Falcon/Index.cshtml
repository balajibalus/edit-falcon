<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Color</title>
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" type="text/css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                url: '/Admin/Falcon/Data',
                method: 'get',
                dataType: 'json',
                success: function (data) {
                    $('#colors').dataTable({
                          
                        data: data,
                        
                        columns: [

                            {
                                'data': 'ringNumber', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'chipNumber', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'species.name', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'scientificName.name', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'gender.name', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'status.name', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'colors.name', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'width', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'length', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'weight', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'seasons.name', 'margin': 'auto'
                            }
                            ,
                            {
                                'data': 'giftedTo', 'margin': 'auto'
                            }
                            ,
                            {
                                data: 'id', name: 'id', "render": function (data) {
                                    return "<a class='btn btn-default btn-sm badge-secondary alert-success ' style='margin-left:5px' href='/Admin/Falcon/Edit/" + data + "'><i class='fas fa-edit'></i> Edit</a><a class='btn btn-default btn-sm badge-info alert-info' style='margin-left:5px' href='/Admin/Falcon/Details/" + data + "'><i class='far fa-list-alt'></i> Details</a>";

                                }
                            },
                           
                            
                        ],
                       
                    });
                    
                }
            });
            
        });
        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Add Falcon',
                        width: 500,
                        height: 800,
                        close: function () {
                            Popup.dialog('destory').remove();
                        }
                    });
                });
        }
    </script>
</head>
<body style="font-family:Arial">
    <div class="border-10">
        <div class="col-6">
            <a class="btn btn-info" onclick="PopupForm('@Url.Action("Create","Falcon")')"><i class="fas fa-plus"></i>&nbsp;Add</a>
        </div>
        <br />

        <div class="alert-light" style="min-width:90%">
            @*//<div style="border:1px solid black;padding:3px;width:1200px">//*@
            <table id="colors" class="table table-striped table-bordered " style="width:100%">
                <thead>
                    <tr>

                        <th>Ring Number</th>
                        <th>
                            Chip Number
                        </th>
                        <th>
                            Falcon Species
                        </th>
                        <th>
                            Scientific Name
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>Status </th>
                        <th>Color</th>
                        <th>Width</th>
                        <th>Length</th>
                        <th>Weight</th>
                        <th>Season</th>
                        <th>Gifted To</th>
                        <th>Actions</th>
                    </tr>


                </thead>
                <tfoot>
                    <tr>

                        <th>Ring Number</th>
                        <th>
                            Chip Number
                        </th>
                        <th>
                            Falcon Species
                        </th>
                        <th>
                            Scientific Name
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>Status </th>
                        <th>Color</th>
                        <th>Width</th>
                        <th>Length</th>
                        <th>Weight</th>
                        <th>Season</th>
                        <th>Gifted To</th>
                        <th>Actions</th>
                    </tr>

                </tfoot>
            </table>
        </div>
    </div>

</body>
</html>

@section Scripts{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
  

