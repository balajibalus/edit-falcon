@model DAL.Models.NewFalcon
@using DAL.Extensions

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Falcons Details</h2>
<div class="p-4 border rounded row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="RingNumber"></label>
            </div>
            <div class="col-6">
                <input asp-for="RingNumber" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Notes"></label>
            </div>
            <div class="col-6">
                <input asp-for="Notes" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CreatedOn"></label>
            </div>
            <div class="col-6">
                <input asp-for="CreatedOn" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="UpdatedOn"></label>
            </div>
            <div class="col-6">
                <input asp-for="UpdatedOn" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CreatedBy"></label>
            </div>
            <div class="col-6">
                <input asp-for="CreatedBy" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="UpdatedBy"></label>
            </div>
            <div class="col-6">
                <input asp-for="UpdatedBy" readonly class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-1">

        </div>
        <div class="col-3">
            Front Image
            <img src="@Model.FrontImage" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />

        </div>

        <div class="col-1">
        </div>
        <div class="col-3">
            Back Image
            <img src="@Model.BackImage" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>

        <div class="col-1">
        </div>
        <div class="col-3">
            Document
            <img src="@Model.Documents" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>

        <div class="col-1">
        </div>
        <div class="col-3">
            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</div>
